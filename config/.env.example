# Pandora's Box - Environment Configuration
# Copy this to .env and fill in your values

# Database Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

DB_HOST=localhost
DB_PORT=5432
DB_NAME=pandoras_box
DB_USER=postgres
DB_PASSWORD=your_password_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security (for production)
SECRET_KEY=change_this_to_random_string
ALLOWED_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# FRED API (Federal Reserve Economic Data)
# Get free key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# Google Gemini API (for Savita auto-search)
# Get free key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Binance Futures Proxy (optional)
# fapi.binance.com is geo-restricted on Railway (HTTP 451).
# Set this to a VPS in an unrestricted region running the proxy script.
# The VPS must expose: GET /fapi/v1/<path>?<params> -> forwards to fapi.binance.com
# Example: BINANCE_PROXY_URL=http://5.78.134.70:8090
BINANCE_PROXY_URL=
